<UserControl x:Class="app.windows.login.components.NoteComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:app.windows.login.components"
             mc:Ignorable="d">
    <Grid Width="300" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="430,0,0,10" ClipToBounds="True">
        <Grid x:Name="container" HorizontalAlignment="Left" VerticalAlignment="Top" Height="32">
            <Rectangle Height="32" x:Name="bar">
                <Rectangle.Effect>
                    <DropShadowEffect Color="{StaticResource BlackColor}" Opacity="0.35" BlurRadius="4" ShadowDepth="0"></DropShadowEffect>
                </Rectangle.Effect>
            </Rectangle>
            <Label FontFamily="{ StaticResource Calibri }" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" x:Name="label"></Label>
        </Grid>
    </Grid>
</UserControl>
