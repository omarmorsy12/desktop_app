<UserControl x:Class="app.shared_components.inputs.BackButtonComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:app.shared_components.inputs"
             mc:Ignorable="d" Width="auto" Height="auto">
    <Grid Width="50" Height="35">
        <Rectangle RadiusX="17" RadiusY="17" x:Name="backBtn">
            <Rectangle.Fill>
                <SolidColorBrush Color="{ StaticResource DarkerGreyColor }"></SolidColorBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image IsHitTestVisible="False" Source="pack://application:,,,/resources/images/full_direction_arrow.png" Width="24" Height="17"></Image>
    </Grid>
</UserControl>
