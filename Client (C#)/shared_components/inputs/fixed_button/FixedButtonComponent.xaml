<UserControl x:Class="app.shared_components.inputs.FixedButtonComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:app.shared_components.inputs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="container" Width="273" Height="37" Opacity="0.8">
        <Rectangle x:Name="background">
            <Rectangle.Fill>
                <SolidColorBrush Color="{ StaticResource BlackColor }"></SolidColorBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="text" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White" FontFamily="{ StaticResource HpSimplified }" FontWeight="Bold" FontSize="18" VerticalContentAlignment="Bottom" IsHitTestVisible="False"></Label>
        <Image Opacity="0" x:Name="loadingIcon" Source="pack://application:,,,/resources/images/loading/loading.png" Stretch="Fill" HorizontalAlignment="Right" Width="19" Height="19"></Image>
    </Grid>
</UserControl>
